void encrypt(){
	/* encrypt each plaintext element, c[] is the encripted array*/
	int temp_crypted_element=1;
	for(uint16_t i=0;i<SIZE;i++){
	   for(uint16_t j=0;j</*key_info.e*/ro_data[0];j++){
		   temp_crypted_element= temp_crypted_element * plaintext[i] % ro_data[1];
	   }
	   c[i]=temp_crypted_element;
	   temp_crypted_element=1;
	}

}


/* decrypt function*/
void decrypt(){

	uint64_t temp_var=1;

	for(uint16_t i=0;i<SIZE;i++){
	   for(uint16_t j=0; j< ro_data[2]; j++){
		temp_var=temp_var*c[i] % ro_data[1];
	   }
	   de_plaintext_char[i]=temp_var;
	   temp_var=1;
	}
}
__attribute__((section (".ccmram")))
void encrypt_ccm(){
	/* encrypt each plaintext element, c[] is the encripted array*/
	int temp_crypted_element=1;
	for(uint16_t i=0;i<SIZE;i++){
	   for(uint16_t j=0;j</*key_info.e*/ro_data[0];j++){
		   temp_crypted_element= temp_crypted_element * plaintext[i] % ro_data[1];
	   }
	   c[i]=temp_crypted_element;
	   temp_crypted_element=1;
	}

}


/* decrypt function*/
__attribute__((section (".ccmram")))
void decrypt_ccm(){

	uint64_t temp_var=1;

	for(uint16_t i=0;i<SIZE;i++){
	   for(uint16_t j=0; j< ro_data[2]; j++){
		temp_var=temp_var*c[i] % ro_data[1];
	   }
	   de_plaintext_char[i]=temp_var;
	   temp_var=1;
	}
}

void Sleep(int time)
{
  uint32_t counter = time*2;/*divide by (16/32)*/
  HAL_SuspendTick();

  HAL_RTCEx_SetWakeUpTimer_IT(&hrtc, counter, RTC_WAKEUPCLOCK_RTCCLK_DIV16);

  /* Enter sleep mode */
  HAL_PWR_EnterSLEEPMode(PWR_MAINREGULATOR_ON, PWR_SLEEPENTRY_WFI);
  HAL_RTCEx_DeactivateWakeUpTimer(&hrtc);

  HAL_ResumeTick();
}

void Enter_Sleep( )
{
  HAL_SuspendTick();
  HAL_PWR_EnterSLEEPMode(PWR_MAINREGULATOR_ON, PWR_STOPENTRY_WFI);
}

void Stop(int time)
{
	  uint32_t counter = time*2;/*divide by (16/32)*/
	  HAL_SuspendTick();

	  HAL_RTCEx_SetWakeUpTimer_IT(&hrtc, counter, RTC_WAKEUPCLOCK_RTCCLK_DIV16);

	  /* Enter sleep mode */
	  HAL_PWR_EnterSTOPMode(PWR_MAINREGULATOR_ON, PWR_STOPENTRY_WFI);
	  HAL_RTCEx_DeactivateWakeUpTimer(&hrtc);

	  HAL_ResumeTick();
}

